int
	get_cursor(t_point *cursor)
{
	char	cursor_pos[17];
	size_t	i;
	int		rd;


	write(0, CURSOR_QUERY, 4);
	rd = read(1, cursor_pos, 16);
	if (rd < 0)
	{
		perror(strerror(errno));
		exit(errno);
	}
	cursor_pos[rd] = '\0';
	i = 2;
	cursors->y = ft_atoi(cursor_pos + i);
	if (cursors->y != (size_t)tgetnum("li"))
		cursors->y--;
	while (ft_isdigit(cursor_pos[i]))
		i++;
	cursors->x = ft_atoi(cursor_pos + i + 1);
}